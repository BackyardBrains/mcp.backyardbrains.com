# Copy to .env and fill in values

# Xero OAuth2
XERO_CLIENT_ID=
XERO_CLIENT_SECRET=
# For production behind your proxy
XERO_REDIRECT_URI=https://mcp.backyardbrains.com/xero/callback

# Token storage (encrypted at rest)
# Generate with: openssl rand -base64 32
TOKEN_ENC_KEY=
TOKEN_STORE_PATH=./.xero_tokens.enc

# Optional shared secret for MCP HTTP endpoint
MCP_SHARED_SECRET=

# Server
PORT=8087
# Requests per minute per IP (basic rate limit)
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Node environment: development | production | test
NODE_ENV=development

{
  "compilerOptions": {
    "target": "ES2022",
    "module": "Node16",
    "moduleResolution": "Node16",
    "outDir": "./build",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"],
    "typeRoots": ["./node_modules/@types"]
  },
  "include": [
    "src/index.ts",
    "src/http/**/*.ts",
    "src/mcp/**/*.ts",
    "src/Utils/**/*.ts",
    "src/xero/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.test.ts",
    "test/**",
    "src/Tools/**",
    "src/Resources/**",
    "src/Middlewares/**",
    "src/XeroMcpServer.ts"
  ]
}

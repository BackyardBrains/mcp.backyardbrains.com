FROM node:lts-alpine

WORKDIR /app

# Copy package files and install dependencies
COPY package*.json ./
RUN npm install --ignore-scripts

# Copy all source files
COPY . .

# Build the project
RUN npm run build

EXPOSE 5000

CMD [ "node", "build/index.js" ]
